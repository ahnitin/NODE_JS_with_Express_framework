<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>
  <body>
<%- include('includes/navigation.ejs') %>
    

    <main>
        <% if(prods.length>0){ %>
        <div class="grid">
            <% for(let product of prods) { %>
            <article class="card-product-item">
                    <header class="card-header">
                        <h1 class="product-title"> <%= product.title %> </h1>
                    </header>
                    <div class="card-image">
                        <img src="https://media.istockphoto.com/id/1354441996/photo/image-of-open-antique-book-on-wooden-table-with-glitter-overlay.jpg?s=1024x1024&w=is&k=20&c=eic0DxSy2AwsGpzs_UNsOly0u3keoPJDYoAi5Zzex9s=" alt="Book">
                    </div>
                    <div class="card-content">
                        <h2 class="product-price">$19.19</h2>
                        <p class="product-description">A very interesting bbok</p>
                    </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
            <h1>No Products Available!</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>